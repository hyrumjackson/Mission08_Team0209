@model Mission08_Team0209.Models.Task

<div>
    <h1>Add a task</h1>
</div>

<form method="post">

    <div>
        <input type="hidden" asp-for="TaskId" />
    </div>

    <div class="form-group">
        <label asp-for="TaskItem">Task Item</label>
        <input asp-for="TaskItem" class="form-control" required />
        <br />
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control" required />
        <br />
    </div>

    <div class="form-group">
        <label asp-for="Quadrant">Quadrant</label>
        <input asp-for="Quadrant" class="form-control" required />
        <br />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId" class="form-control" required >
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
    </div>

    <div class="form-group">
        <label asp-for="Completed">Completed</label>
        <input asp-for="Completed" class="form-control" required />
        <br />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


