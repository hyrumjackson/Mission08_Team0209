@{
    ViewData["Title"] = "To-Do List";
}

@model List<Mission08_Team0209.Models.Task>

<div class="container bordered-grid">
    <div class="row center">
        <div class="col center padding">
            <h1>Steven Covey's Time Management Matrix</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-2 center">
        </div>
        <div class="col-5 ">
            <h3>Urgent</h3>
        </div>
        <div class="col-5">
            <h3>Not Urgent</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-2 center padding col-2-border">
            <h3>Important</h3>
        </div>
        @if (Model != null)
        {
            <div class="col-5">
                <h3>Quadrant 1: Important and Urgent</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Where(task => task.Quadrant == 1 && task.Completed == false))
                        {
                            <tr>
                                <td>@x.TaskItem</td>
                                <td>
                                    <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                                    <form asp-controller="Home" asp-action="Complete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@x.TaskId" />
                                        <button type="submit" class="btn btn-info btn-sm">Complete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="col-5">
                <h3>Quadrant 1: Important and Urgent</h3>
            </div>
        }
        @if (Model != null)
        {
            <div class="col-5">
                <h3>Quadrant 2: Important but Not Urgent</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Where(task => task.Quadrant == 2 && task.Completed == false))
                        {
                            <tr>
                                <td>@x.TaskItem</td>
                                <td>
                                    <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                                    <form asp-controller="Home" asp-action="Complete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@x.TaskId" />
                                        <button type="submit" class="btn btn-info btn-sm">Complete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="col-5">
                <h3>Quadrant 2: Important but Not Urgent</h3>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-2 center padding col-2-border">
            <h3>Not Important</h3>
        </div>
        @if (Model != null)
        {
            <div class="col-5">
                <h3>Quadrant 3: Urgent but Not Important</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Where(task => task.Quadrant == 3 && task.Completed == false))
                        {
                            <tr>
                                <td>@x.TaskItem</td>
                                <td>
                                    <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                                    <form asp-controller="Home" asp-action="Complete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@x.TaskId" />
                                        <button type="submit" class="btn btn-info btn-sm">Complete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="col-5">
                <h3>Quadrant 3: Urgent but Not Important</h3>
            </div>
        }
        @if (Model != null)
        {
            <div class="col-5">
                <h3>Quadrant 4: Not Important or Urgent</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Where(task => task.Quadrant == 4 && task.Completed == false))
                        {
                            <tr>
                                <td>@x.TaskItem</td>
                                <td>
                                    <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                                    <form asp-controller="Home" asp-action="Complete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@x.TaskId" />
                                        <button type="submit" class="btn btn-info btn-sm">Complete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="col-5">
                <h3>Quadrant 4: Not Important or Urgent</h3>
            </div>
        }
    </div>
</div>